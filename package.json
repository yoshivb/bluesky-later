{
  "name": "bluesky-later",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:remote": "docker-compose -f docker-compose.dev.yml up --build -d postgres cron && sleep 5 && concurrently \"VITE_STORAGE_MODE=remote vite\" \"cd api && npm run dev\"",
    "dev:remote:down": "docker-compose -f docker-compose.dev.yml down -v",
    "prod": "docker-compose up --build",
    "prod:down": "docker-compose down",
    "docker": "docker build -t yoshivb/bluesky-later -f Dockerfile.combined --platform linux/arm64 . && docker save yoshivb/bluesky-later > ../yoshivb-bluesky-later.tar"
  },
  "dependencies": {
    "@atproto/api": "^0.12.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@vvo/tzdb": "^6.74.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "dexie": "^3.2.5",
    "dexie-react-hooks": "^1.1.7",
    "lucide-react": "^0.516.0",
    "next-themes": "^0.4.3",
    "openai": "^4.72.0",
    "react": "^19.1.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.4.1",
    "sonner": "^1.7.0",
    "superjson": "^2.2.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^22.9.0",
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.1.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc"
  }
}
